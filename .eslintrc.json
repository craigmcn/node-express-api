{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "ignorePatterns": ["**/test/*.js"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "max-len": ["warn", { "code": 120 }]
  }
}
